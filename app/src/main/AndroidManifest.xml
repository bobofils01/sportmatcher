<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sportmatcher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SignUpActivity"></activity>
        <activity android:name=".ui.SplashScreenActivity" />
        <activity android:name=".ui.NavigationActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.sports.session.SessionViewActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.sports.AddSessionToPitchActivity"
            android:parentActivityName=".ui.sports.session.SessionViewActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.authentication.ForgotPasswordActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.sports.SportHomePageActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.SportActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.FriendsActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.LoginActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.preferences.PreferencesActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.sports.AllSessionOfAPitchActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.SportChoiceActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.WelcomeActivity"
            android:windowSoftInputMode="adjustPan|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>