<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#fff"
    tools:context=".ui.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/sportmatcher"
            app:layout_constraintBottom_toTopOf="@id/sportmartcherTextView"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/sportmartcherTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Sportmatcher"
            android:textColor="@color/colorApp"
            android:textSize="50dp"
            app:layout_constraintTop_toBottomOf="@+id/icon" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="52dp"
            android:layout_weight="1"
            android:background="@drawable/button_enabled"
            android:backgroundTint="#FF6347"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="25sp"
            app:layout_constraintRight_toLeftOf="@+id/signup_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress"
            android:layout_marginTop="140dp"
            android:visibility="gone"/>

