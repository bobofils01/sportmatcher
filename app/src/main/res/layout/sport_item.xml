<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pitchPicture"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/pitchAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitchName" />

    <TextView
        android:id="@+id/pitchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pitch name"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/sessions"
        app:layout_constraintStart_toStartOf="@+id/pitchPicture" />

    <TextView
        android:id="@+id/pitchDescription"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text=" description new pitchs"
        app:layout_constraintBottom_toTopOf="@+id/pitchAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sessions" />

    <TextView
        android:id="@+id/pitchAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rue promenade de marie 12, 1000 Bruxelles"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sessions"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:text="Sessions"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>