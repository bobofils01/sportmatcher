<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fromTextViewId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Me"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/msgTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/chat_message"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="this is my message"
        app:layout_constraintEnd_toStartOf="@+id/fromTextViewId"
        app:layout_constraintTop_toTopOf="@+id/fromTextViewId" />
</androidx.constraintlayout.widget.ConstraintLayout>